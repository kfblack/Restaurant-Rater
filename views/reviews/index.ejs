<%- include('../partials/header') %>

<h2>All Reviews</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Rating</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% reviews.forEach(r => { %>
        <tr>
            <td><%= r.name %></td>
            <td><%= r.location %></td>
            <td><%= r.date %></td>
            <td><%= r.rating %></td>
            <td><%= r.description %></td>
        </tr>
        <% }) %>
    </tbody>
</table>

