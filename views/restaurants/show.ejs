<%- include('../partials/header') %>

<h2>Enter New Review</h2>
<form action="/restaurants/<%= restaurant._id %>/reviews" method="POST">
    <label>Date:
        <input type="datetime-local" name="date">
    </label><br>
    <label>Rating:
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label><br>
    <label>Description:
        <input type="text" name="description">
    </label><br>
    <button type="submit">Submit Review</button>
</form> 
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Rating</th>
                <th>Description</th>
                <th>User Name</th>

                <th></th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            <% reviews.forEach(function(r) { %>
                <tr>
                    <td><%= r.date %></td>
                    <td><%= r.rating %></td>
                    <td><%= r.description %></td>
                    <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
                    <td>
                        <% if (user?._id.equals(r.user)) { %>
                        <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                        </form>
                        <% } %></td>
                    </td>
                    <td>
                        <a href="/reviews/<%= r._id %>/edit"><button type="submit">Update</button></a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>